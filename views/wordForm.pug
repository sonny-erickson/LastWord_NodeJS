extends layout
block content
  div(class="d-flex flex-row content mx-auto")
    div(class="flex-fill")
      form(class="card" method="post" action=word._id ? "/words/update/"+ word._id : "/words")
        div(class="card-header") Ã‰crire une phrase
        div(class="card-body")
          textarea(type="text"  name="author" class="form-control mb-3" placeholder=word._id? "{word.author}" : "Author")= word.author
          div(class="form-group")
            textarea(class="form-control" name="content" placeholder="Who have the last word ??")= word.content
            if errors 
              ul(class='my-2')
                each error in errors
                  li(class='text-danger')= error
          div(class="w-100")
            input(type="submit" value="Send" class="btn btn-primary ml-auto d-block")