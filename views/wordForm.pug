extends layout
block content
  div(class="d-flex flex-row content mx-auto")
    div(class="flex-fill")
      form(class="card" method="post" action="/api/words")
        div(class="card-header") Ã‰crire une phrase
        div(class="card-body")
          input(type="text"  name="author" class="form-control mb-3" placeholder="Author")
          div(class="form-group")
            textarea(class="form-control" name="content" placeholder="Who have the last word ??")
            if errors 
              ul(class='my-2')
                each error in errors
                  li(class='text-danger')= error
          div(class="w-100")
            input(type="submit" value="Send" class="btn btn-primary ml-auto d-block")